@model PhotoManager.UI.Models.RegisterViewModel


<div class="row">
    <div class="col-md-8 col-md-offset-3">
        <div>
            <article class="card-body">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="text-danger">
                        @Html.ValidationSummary(false)
                    </div>
                    <div class="form-group">
                        <div  id="inputlg" class="input-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label", id = "inputlg" })

                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control dropdown-menu-item-size", id = "inputlg" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group ">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })

                            @Html.PasswordFor(m => m.Password, new { @class = "form-control dropdown-menu-item-size" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })

                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control dropdown-menu-item-size" })
                        </div> 
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-4.5">
                            <input type="submit" class="btn btn-primary btn-block" value="Register" />
                        </div>
                    </div>

                }
            </article>
        </div>
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
